<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>5</minor>
  </specVersion>
  <actionList>
    <action>
      <name>SetAddress</name>
      <argumentList>
        <argument>
          <name>newAddressValue</name>
          <direction>in</direction>
          <relatedStateVariable>Address</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetAddress</name>
      <argumentList>
        <argument>
          <name>AddressValue</name>
          <direction>out</direction>
          <relatedStateVariable>Address</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetPeriod</name>
      <argumentList>
        <argument>
          <name>newPeriodValue</name>
          <direction>in</direction>
          <relatedStateVariable>Period</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetPeriod</name>
      <argumentList>
        <argument>
          <name>PeriodValue</name>
          <direction>out</direction>
          <relatedStateVariable>Period</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetInvert</name>
      <argumentList>
        <argument>
          <name>newInvertValue</name>
          <direction>in</direction>
          <relatedStateVariable>Invert</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetInvert</name>
      <argumentList>
        <argument>
          <name>InvertValue</name>
          <direction>out</direction>
          <relatedStateVariable>Invert</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
 </actionList>
 <serviceStateTable>
    <stateVariable>
       <sendEventsAttribute>no</sendEventsAttribute>
       <name>Period</name>
       <dataType>i4</dataType>
       <defaultValue>15</defaultValue>
    </stateVariable>
    <stateVariable>
       <sendEventsAttribute>no</sendEventsAttribute>
       <name>Address</name>
       <dataType>string</dataType>
       <defaultValue>Enter an IP or a domain name (e.g. 127.0.0.1 or www.findvera.com)</defaultValue>
    </stateVariable>
    <stateVariable>
       <sendEventsAttribute>no</sendEventsAttribute>
       <name>Invert</name>
       <dataType>boolean</dataType>
       <defaultValue>false</defaultValue>
    </stateVariable>
 </serviceStateTable>
</scpd>

