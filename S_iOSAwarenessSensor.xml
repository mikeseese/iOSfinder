<?xml version="1.0" encoding="utf-8"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
   <specVersion>
      <major>1</major>
      <minor>1</minor>
   </specVersion>
     <serviceStateTable>
      <stateVariable>
       <name>Tripped</name>
       <sendEventsAttribute>yes</sendEventsAttribute>
       <dataType>boolean</dataType>
    </stateVariable>
    <stateVariable>
      <name>Armed</name>
      <sendEventsAttribute>yes</sendEventsAttribute>
      <dataType>boolean</dataType>
    </stateVariable>
  </serviceStateTable>
   <actionList>
    <action>
      <name>SetArmed</name>
      <argumentList>
        <argument>
          <name>newArmedValue</name>
          <direction>in</direction>
          <relatedStateVariable>Armed</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
      <action>
         <name>GetArmed</name>
         <argumentList>
            <argument>
               <name>ArmedValue</name>
               <direction>out</direction>
               <relatedStateVariable>Armed</relatedStateVariable>
            </argument>
        </argumentList>
      </action>
      <action>
         <name>GetTripped</name>
         <argumentList>
            <argument>
               <name>TrippedValue</name>
               <direction>out</direction>
               <relatedStateVariable>Tripped</relatedStateVariable>
            </argument>
         </argumentList>
      </action>
      <action>
         <name>SetTripped</name>
         <argumentList>
            <argument>
               <name>newTrippedValue</name>
               <direction>in</direction>
               <relatedStateVariable>Tripped</relatedStateVariable>
            </argument>
         </argumentList>
      </action>
   </actionList>
</scpd>
